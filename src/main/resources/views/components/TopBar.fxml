<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<HBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.passmate.controllers.components.TopBarController"
      alignment="CENTER_LEFT" spacing="10" styleClass="topbar-root">
    <padding>
        <Insets top="10" right="12" bottom="10" left="12"/>
    </padding>
    <Button fx:id="menuBtn" styleClass="icon-btn">
        <graphic>
            <FontIcon iconLiteral="fas-bars"/>
        </graphic>
    </Button>
    <TextField fx:id="searchField" promptText="Search passwords" HBox.hgrow="ALWAYS" />
    <Region HBox.hgrow="ALWAYS" />
    <Label fx:id="minimizeBtn" text="—" styleClass="window-btn" />
    <Label fx:id="closeBtn" text="✕" styleClass="window-btn danger" />
    <StackPane styleClass="avatar">
        <Label text="PM" />
    </StackPane>
</HBox>
