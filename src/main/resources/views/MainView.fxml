<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<StackPane xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.passmate.controllers.MainController"
            stylesheets="@/css/style.css"
            prefWidth="1000" prefHeight="680">
    <HBox spacing="12" styleClass="main-root">
        <padding>
            <Insets top="12" right="12" bottom="12" left="12"/>
        </padding>

        <!-- Left Sidebar -->
        <fx:include fx:id="sidebar" source="/views/components/Sidebar.fxml" />

        <!-- Middle List -->
        <fx:include fx:id="passwordList" source="/views/components/PasswordList.fxml" />

        <!-- Right Detail / Editor (stacked) -->
        <StackPane fx:id="rightStack" HBox.hgrow="ALWAYS">
            <fx:include fx:id="passwordDetail" source="/views/components/PasswordDetail.fxml" />
            <fx:include fx:id="passwordEditor" source="/views/components/PasswordEditor.fxml" />
        </StackPane>
    </HBox>
</StackPane>
